<?php
if($_POST)
{	
	if($_POST['age'] < 1 || $_POST['age'] > 130 || $_POST['height'] < 40 || $_POST['height'] > 260
		|| $_POST['weight'] < 20 || $_POST['weight'] > 600)
	{
		echo 'Invalid input!';
	}		
	else
	{
		$age = $_POST['age'];
		$height = $_POST['height'];
		$weight = $_POST['weight'];
		
		if($_POST['exercise'] == 1)
			$coef = 1.2;
		elseif($_POST['exercise'] == 2)
			$coef = 1.375;
		elseif($_POST['exercise'] == 3)
			$coef = 1.55;
		elseif($_POST['exercise'] == 4)
			$coef = 1.725;
		else
			$coef = 1.9;
		
		if($_POST['sex'] == 'male')
			$brm = 88.362 + (13.397 * $weight) + (4.799 * $height) - (5.677 * $age);
		else
			$brm = 447.593 + (9.247 * $weight) + (3.098 * $height) - (4.330 * $age);
		
		echo 'Your recommended  daily caloric intake is '.$brm*$coef;

	}
}?>

